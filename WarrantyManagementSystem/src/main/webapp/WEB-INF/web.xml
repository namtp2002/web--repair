<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Warranty Management System</display-name>
    
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <!-- Session Configuration -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <!-- Authentication Filter -->
    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>com.warranty.filter.AuthenticationFilter</filter-class>
    </filter>
    
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/views/*</url-pattern>
    </filter-mapping>

    <!-- Character Encoding Filter -->
    <filter>
        <filter-name>CharacterEncodingFilter</filter-name>
        <filter-class>com.warranty.filter.CharacterEncodingFilter</filter-class>
    </filter>
    
    <filter-mapping>
        <filter-name>CharacterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- Servlets -->
    
    <!-- Authentication Servlets -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.warranty.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.warranty.servlet.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.warranty.servlet.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <!-- Admin Servlets -->
    <servlet>
        <servlet-name>ImportExcelServlet</servlet-name>
        <servlet-class>com.warranty.servlet.ImportExcelServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ImportExcelServlet</servlet-name>
        <url-pattern>/admin/import-excel</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ProductCustomerListServlet</servlet-name>
        <servlet-class>com.warranty.servlet.ProductCustomerListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductCustomerListServlet</servlet-name>
        <url-pattern>/admin/product-customer-list</url-pattern>
    </servlet-mapping>

    <!-- Technician Servlets -->
    <servlet>
        <servlet-name>CreateIntakeTicketServlet</servlet-name>
        <servlet-class>com.warranty.servlet.CreateIntakeTicketServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateIntakeTicketServlet</servlet-name>
        <url-pattern>/technician/create-intake-ticket</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TechnicianDashboardServlet</servlet-name>
        <servlet-class>com.warranty.servlet.TechnicianDashboardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TechnicianDashboardServlet</servlet-name>
        <url-pattern>/technician/dashboard</url-pattern>
    </servlet-mapping>

    <!-- Technical Manager Servlets -->
    <servlet>
        <servlet-name>TechManagerDashboardServlet</servlet-name>
        <servlet-class>com.warranty.servlet.TechManagerDashboardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TechManagerDashboardServlet</servlet-name>
        <url-pattern>/tech-manager/dashboard</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AssignTicketServlet</servlet-name>
        <servlet-class>com.warranty.servlet.AssignTicketServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AssignTicketServlet</servlet-name>
        <url-pattern>/tech-manager/assign-ticket</url-pattern>
    </servlet-mapping>

    <!-- Warehouse Servlets -->
    <servlet>
        <servlet-name>WarehouseServlet</servlet-name>
        <servlet-class>com.warranty.servlet.WarehouseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>WarehouseServlet</servlet-name>
        <url-pattern>/warehouse/*</url-pattern>
    </servlet-mapping>

    <!-- Customer Portal -->
    <servlet>
        <servlet-name>CustomerPortalServlet</servlet-name>
        <servlet-class>com.warranty.servlet.CustomerPortalServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CustomerPortalServlet</servlet-name>
        <url-pattern>/customer/track-ticket</url-pattern>
    </servlet-mapping>

    <!-- Error Pages -->
    <error-page>
        <error-code>404</error-code>
        <location>/views/error/404.jsp</location>
    </error-page>

    <error-page>
        <error-code>500</error-code>
        <location>/views/error/500.jsp</location>
    </error-page>

</web-app>
